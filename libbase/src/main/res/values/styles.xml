<resources>

    <style name="AppTheme" parent="@style/BaseAppTheme" />

    <!--MX5 拍照闪屏问题 windowTranslucentStatus必须为false-->
    <style name="BaseAppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:dialogTheme">@style/DialogTheme</item>
        <item name="android:alertDialogTheme">@style/Theme.DeviceDefault.Dialog.Alert</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:popupWindowStyle">@style/Theme.DeviceDefault.Dialog.Alert</item>
        <item name="colorPrimary">@color/backgroundColorPrimary</item>
        <item name="colorPrimaryDark">@color/backgroundColorDarkPrimary</item>
        <item name="colorAccent">@color/widgetColorPrimary</item>
        <item name="android:windowBackground">@color/backgroundColorPrimary</item>
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="android:textSize">@dimen/text_size_title_small</item>
        <item name="android:textColorHint">@color/light_text_color</item>
        <item name="android:popupMenuStyle">@style/CustomPopupMenu</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:listDivider">@drawable/list_divider</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="NoTitleFullscreen" parent="BaseAppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>


    <style name="CustomPopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@android:color/black</item>
    </style>

    <style name="Theme.DeviceDefault.Dialog.Alert" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="DialogTheme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
    </style>

    <!--聊天会话列表顶部，营销顶部tab-->
    <style name="TabIndicatorFixed">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tab_height_level1</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="indicatorMode">fixed</item>
        <item name="android:background">@color/windowBackgroundColor</item>
        <item name="tabIndicatorColor">@color/widgetColorPrimary</item>
        <item name="tabIndicatorHeight">@dimen/page_indicator_height</item>
        <item name="tabIndicatorWidth">0dp</item>
        <item name="tabItemSpacing">15dp</item>
        <item name="tabLayoutMode">tile</item>
        <item name="tabSelectedTextColor">@color/widgetColorPrimary</item>
        <item name="tabTextColor">@color/dark_text_color</item>
        <item name="textSize">20sp</item>
    </style>

</resources>
